# vi:ft=conf
#
# https://github.com/ghostty-org/ghostty/blob/main/src/config/Config.zig

clipboard-read = allow

copy-on-select = clipboard

cursor-style = block
cursor-style-blink = true

font-family = JetBrainsMono Nerd Font Mono
font-size = 13

selection-invert-fg-bg = true

shell-integration-features = no-cursor

theme = dracula

# Keybinds
keybind = ctrl+minus=new_split:down
keybind = ctrl+j=goto_split:down
keybind = ctrl+k=goto_split:up
keybind = ctrl+equal=equalize_splits
keybind = cmd+shift+up=resize_split:up,100
keybind = cmd+shift+down=resize_split:down,100
